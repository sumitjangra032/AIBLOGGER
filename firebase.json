{
  "firestore": {
    "indexes": "firestore.indexes.json",
    "rules": "firestore.rules"
  },
  "functions": [
    {
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ],
      "schedules": [
        {
          "function": "refreshBlogs",
          "schedule": "every 5 minutes"
        }
      ],
      "source": "functions"
    }
  ]
}
